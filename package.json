{
  "private": true,
  "name": "next-blog",
  "version": "0.1.0",
  "scripts": {
    "analyze": "ANALYZE=true yarn build",
    "build": "next build",
    "postbuild": "next-sitemap",
    "codegen": "yarn graphql-codegen && yarn json-schema-codegen",
    "dev": "next-remote-watch ./content",
    "graphql-codegen": "graphql-codegen -r dotenv/config",
    "install": "yarn codegen",
    "json-schema-codegen": "curl -sS https://qiita.com/api/v2/schema | yarn json2ts -o src/generated/qiita.ts --bannerComment '/* eslint-disable */'",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "prepare": "husky install",
    "start": "next start",
    "svg": "npx @svgr/cli --out-dir src/components/icons --typescript -- public/icons && yarn eslint 'src/components/icons/*.{ts,tsx}' --fix",
    "type-check": "tsc"
  },
  "dependencies": {
    "feed": "4.2.2",
    "glob": "8.0.3",
    "graphql-request": "3.6.1",
    "gray-matter": "4.0.3",
    "highlight.js": "11.6.0",
    "next": "12.3.1",
    "react": "18.2.0",
    "react-datocms": "1.6.9",
    "react-dom": "18.2.0",
    "reflect-metadata": "0.1.13",
    "rehype-highlight": "5.0.2",
    "rehype-react": "7.1.1",
    "remark-parse": "10.0.1",
    "remark-rehype": "10.1.0",
    "tsyringe": "4.7.0",
    "unified": "10.1.2"
  },
  "devDependencies": {
    "@graphql-codegen/add": "3.1.1",
    "@graphql-codegen/cli": "2.3.1",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-graphql-request": "4.3.3",
    "@graphql-codegen/typescript-operations": "2.2.2",
    "@next/bundle-analyzer": "12.3.1",
    "@types/glob": "8.0.0",
    "@types/node": "18.7.23",
    "@types/react": "18.0.21",
    "autoprefixer": "10.4.12",
    "eslint": "7.32.0",
    "eslint-config-thai-soup": "1.1.0",
    "graphql": "15.8.0",
    "husky": "8.0.3",
    "json-schema-to-typescript": "11.0.2",
    "lint-staged": "13.0.3",
    "next-remote-watch": "2.0.0",
    "next-sitemap": "2.5.28",
    "postcss": "8.4.17",
    "prettier": "2.4.1",
    "prettier-package-json": "2.6.4",
    "tailwindcss": "3.1.8",
    "typescript": "4.6.4"
  },
  "lint-staged": {
    "*.{ts.tsx}": "eslint --fix",
    "*.graphql": "prettier --write",
    "package.json": "prettier-package-json --write"
  },
  "nextBundleAnalysis": {
    "budget": 102400,
    "budgetPercentIncreaseRed": 10,
    "showDetails": true
  }
}
