{
  "private": true,
  "name": "next-blog",
  "version": "0.1.0",
  "scripts": {
    "build": "next build",
    "codegen": "graphql-codegen -r dotenv/config",
    "dev": "next dev",
    "install": "yarn codegen",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "start": "next start"
  },
  "dependencies": {
    "graphql-request": "3.1.0",
    "highlight.js": "10.2.0",
    "next": "9.4.4",
    "normalize.css": "8.0.1",
    "react": "16.14.0",
    "react-datocms": "1.2.6",
    "react-dom": "16.14.0",
    "rehype-highlight": "4.0.0",
    "rehype-react": "6.1.0",
    "remark-parse": "8.0.3",
    "remark-rehype": "7.0.0",
    "unified": "9.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "1.17.7",
    "@graphql-codegen/cli": "1.17.8",
    "@graphql-codegen/introspection": "1.17.8",
    "@graphql-codegen/typescript": "1.17.9",
    "@graphql-codegen/typescript-graphql-request": "1.17.7",
    "@graphql-codegen/typescript-operations": "1.17.8",
    "@types/node": "14.11.1",
    "@types/react": "16.9.49",
    "eslint": "7.9.0",
    "eslint-config-thai-soup": "1.0.4",
    "graphql": "15.3.0",
    "husky": "4.3.0",
    "lint-staged": "10.4.0",
    "prettier": "2.1.2",
    "prettier-package-json": "2.1.3",
    "typescript": "4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts.tsx}": "eslint --fix",
    "*.graphql": "prettier --write",
    "package.json": "prettier-package-json --write"
  }
}
